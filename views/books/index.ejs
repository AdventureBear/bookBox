<!DOCTYPE html>

<!--Assign Angular Module-->
<html ng-app="bookBox">

<head lang="en">
    <% include ../partials/head %>
        <!--METAs -->
        <meta charset="UTF-8">
        <title>BookBox MEAN Stack Basejump</title>

        <!-- SCROLLS -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
        <!-- load bootstrap -->
        <style>
            html {
                overflow-y: scroll;
            }
            
            body {
                padding-top: 50px;
            }
            
            #todo-list {
                margin-bottom: 30px;
            }
        </style>

        <!-- SPELLS -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
        <!-- load jquery -->
        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script>
        <!-- load angular -->
        <script src="core.js"></script>



</head>

<!-- SET THE CONTROLLER AND GET ALL BOOKS -->

<body ng-controller="mainController">
    <header>
        <% include ../partials/header %>
    </header>

    <div class="container">

        <!--HEADER & BOOK COUNT-->
        <div class="jumbotron text-center">
            <h1>There are <span class="label label-info">{{books.length}}</span> books in our community Book Box!</h1>
        </div>


        <!-- BOOK LIST -->
        <div id="todo-list" class="row">
            <div class="col-sm-8">
                <h1>Community Library - All Books</h1>
                <!-- Loop over the in scope books-->
                <div class="row">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Owner</th>
                                <th>Action</th>
                                <th></th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <!--<tr>
                                <td>
                                    <input class="form-control" ng-model="book.name">
                                </td>
                                <td>
                                    <input class="form-control" ng-model="book.owner">
                                </td>
                                <td>
                                    <button class="btn btn-info" ng-click="createBook()">Add Book</button>
                                </td>
                                <td>
                                    <button class="btn btn-primary" ng-click="deleteBook(book._id)">Update</button>
                                </td>
                            </tr>-->
                            <tr ng-repeat="book in books">
                                <td>{{book.name}}</td>
                                <td><a ng-href="/api/users/{{book.owner._id}}">{{book.owner.local.email}}</a></td>
                                <td>
                                    <button class="btn btn-danger" ng-click="deleteBook(book._id)">Remove</button>
                                </td>
                                <td>
                                    <button class="btn btn-warning" ng-click="tradeBook(book._id)">Trade</button>
                                </td>

                            </tr>
                        </tbody>
                    </table>



                    <label>
                        <!--<input type="checkbox" ng-click="deleteBook(book._id)"> {{book.name}}
                        <input type="checkbox"> {{book.name}}-->
                    </label>
                </div>




                <!--FORM TO CREATE BOOKS-->

            </div>

            <div class="col-sm-4">
                <h1>Add a Book!</h1>
                <div id="book-form">

                    <form name="newBook">
                        <div class="form-group">

                            <!--Bind this value to formData.text in Angular -->
                            <input type="text" class="form-control input-lg text-center" ng-required="true"
  ng-minlength="3" placeholder="The greatest love story ever told" ng-model="formData.name">
                        </div>

                        <!--createBook() will create new books -->
                        <button type="submit" class="btn btn-primary btn-lg" ng-disabled="newBook.$invalid" ng-click="createBook()">Add Book</button>
                    </form>

                </div>
            </div>
        </div>
    </div>



    <footer>
        <% include ../partials/footer %>
    </footer>
</body>

</html>